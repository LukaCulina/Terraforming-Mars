<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hr.terraforming.mars.terraformingmars.controller.SellPatentsController"
      styleClass="choose-window" spacing="15" alignment="CENTER">

    <Label text="Select cards to sell (1 MC each)" styleClass="choose-label"/>

    <Label fx:id="infoLabel" styleClass="info-label"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" prefHeight="400" styleClass="transparent-scroll-pane">
        <TilePane fx:id="cardsForSalePane" hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
        </TilePane>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="confirmButton" text="Confirm Sale" onAction="#confirmSale" styleClass="confirm-button"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" styleClass="cancel-sale"/>
    </HBox>
</VBox>
