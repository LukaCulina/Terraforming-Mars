<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="hr.terraforming.mars.terraformingmars.controller.ChooseCorporationController"
      styleClass="choose-window" alignment="CENTER" spacing="30">

    <Label fx:id="chooseCorpLabel" styleClass="choose-label"/>

    <HBox fx:id="corporationButtonsContainer" spacing="25" alignment="CENTER" />

    <Button fx:id="confirmButton" text="Confirm" onAction="#confirmSelection" styleClass="confirm-button"/>
</VBox>